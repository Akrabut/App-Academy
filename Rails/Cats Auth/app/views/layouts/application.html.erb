<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <% if logged_in? %>
        <%= button_to "Log out",
          { controller: :sessions, action: :destroy, id: current_user.id }, method: :delete%>
        Hello <%= current_user.username %>!
      <% else %>
        <%= button_to "Log in",
        { controller: :sessions, action: :new }, method: :get %>
        <%= button_to "Sign up",
        { controller: :users, action: :new }, method: :get %>
      <% end %>
    </header>
    <%= yield %>
    <%= flash[:error] if flash[:error] %>
  </body>
</html>
