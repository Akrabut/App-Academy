<table>
  <thead>
    <tr>
      <th colspan="2"><%= @cat.name %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Age</td>
      <td><%= @cat.age %></td>
    </tr>
    <tr>
      <td>Color</td>
      <td><%= @cat.color %></td>
    </tr>
    <tr>
      <td>Sex</td>
      <td><%= @cat.sex %></td>
    </tr>
    <tr>
      <td colspan="2"><%= @cat.description %></td>
    </tr>
    <tr><td>
      <% @cat.rental_requests.order('start_date').each do |request| %>
        <% if request.status == 'PENDING' %>
          <%= request.start_date %> until <%= request.end_date %>
          <button onclick=<% request.approve! %>>Approve</button>
          <br>
        <% end %>
      <% end %>
    </td></tr>
  </tbody>
</table>