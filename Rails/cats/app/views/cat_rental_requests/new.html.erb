<h1>Make a rental request</h1>

<form action=<%= cat_rental_requests_url %> method="POST">
  <label for=cats>Choose a cat -</label>
  <select id="cats" name="request[cat_id]" required>
    <%= @cats.each do |cat| %>
      <option value= <%= cat.id %> ><%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label for="start_date">Start date:</label>
  <input id="start_date" type="date" name=request[start_date] required>
  <br>

  <label for="end_date">End date:</label>
  <input type="date" name="request[end_date]" required>

  <br><br>
  <input type="submit" value="Send request"></input>

</form>